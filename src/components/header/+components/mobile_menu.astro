---
const menuItems = [
    { href: '/', label: 'Anasayfa' },
    { href: '/services', label: 'Hizmetlerimiz' },
    { href: '/projects', label: 'Projeler' },
    { href: '/pricing', label: 'Fiyatlandırma' },
    { href: '/corporate', label: 'Kurumsal' },
    { href: '/blog', label: 'Blog' },
    { href: '/contact', label: 'İletişim' },
];

const pathname = Astro.url.pathname;
---

<div x-data="mobileMenu">
    <button
        @click="toggle"
        class="inline-flex size-16 cursor-pointer flex-col justify-center gap-1.5 rounded-full border-4 border-transparent bg-gray-50 p-3 transition-all duration-300 focus-within:border-gray-100">
        <span class="h-0.5 w-full rounded-full bg-black transition-all duration-300" :class="isOpen ? 'rotate-45 translate-y-1' : ''"></span>
        <span class="h-0.5 w-9/12 rounded-full bg-black transition-all duration-300" :class="isOpen ? '-rotate-45 -translate-y-1 w-full' : ''"></span>
    </button>

    <div x-show="isOpen" x-cloak class="fixed top-31 left-0 h-[calc(100vh-7.75rem)] w-full bg-white">
        <div @click.away="isOpen = false" @keyup.escape.window="isOpen = false" class="scrollbar-hide container mx-auto flex h-full flex-col overflow-y-auto px-4">
            <!-- Navigation -->
            <nav class="p-6">
                <ul class="space-y-4">
                    {
                        menuItems.map((item) => (
                            <li>
                                <a
                                    href={item.href}
                                    class="font-secondary block border-b border-gray-100 py-3 text-lg font-extralight text-gray-900 transition-colors hover:text-red-400 md:text-xl"
                                    class:list={pathname === item.href ? 'text-red-400' : ''}>
                                    {item.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </nav>

            <!-- Contact Info & Social -->
            <div class="space-y-6 p-6">
                <!-- Contact Details -->
                <div class="space-y-3">
                    <h3 class="">İletişim Bilgileri</h3>

                    <div class="flex items-center space-x-3 text-gray-600">
                        <svg class="size-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                            </path>
                        </svg>
                        <span class="text-sm">+90 (531) 794 2192</span>
                    </div>

                    <div class="flex items-center space-x-3 text-gray-600">
                        <svg class="size-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                            </path>
                        </svg>
                        <span class="text-sm">info@beinajans.com</span>
                    </div>

                    <div class="flex items-start space-x-3 text-gray-600">
                        <svg class="mt-0.5 size-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span class="text-sm">R.Sevket İnce Mahallesi, 1928 Sok. No:5<br />Bayraklı/İzmir</span>
                    </div>

                    <div class="flex items-center space-x-3 text-gray-600">
                        <svg class="size-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-sm">Pazartesi - Cuma: 09:00 - 18:00</span>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="space-y-3">
                    <h3 class="text-gray-900">Sosyal Medya</h3>
                    <div class="flex space-x-4">
                        <a href="#" target="_blank" class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-600 text-white transition-colors hover:bg-blue-700">
                            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z">
                                </path>
                            </svg>
                        </a>
                        <a href="#" target="_blank" class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-800 text-white transition-colors hover:bg-blue-900">
                            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z">
                                </path>
                            </svg>
                        </a>
                        <a href="#" target="_blank" class="flex h-10 w-10 items-center justify-center rounded-full bg-pink-600 text-white transition-colors hover:bg-pink-700">
                            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.748-1.378 0 0-.599 2.282-.744 2.840-.282 1.073-1.045 2.417-1.566 3.243 1.177.364 2.417.558 3.705.558 6.624 0 11.99-5.367 11.99-11.987C24.007 5.367 18.641.001 12.017.001z">
                                </path>
                            </svg>
                        </a>
                        <a href="#" target="_blank" class="flex h-10 w-10 items-center justify-center rounded-full bg-red-600 text-white transition-colors hover:bg-red-700">
                            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z">
                                </path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Copyright -->
                <div class="pt-4">
                    <p class="text-center text-xs text-gray-500">© 2024 Beinajans. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    import Alpine from 'alpinejs';

    // Mobile menu toggle logic can be added here with alpine js
    document.addEventListener('alpine:init', () => {
        Alpine.data('mobileMenu', () => ({
            isOpen: false,
            toggle() {
                this.isOpen = !this.isOpen;
            },
        }));
    });
</script>
